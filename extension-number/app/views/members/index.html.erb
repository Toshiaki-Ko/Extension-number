<% @page_title = "内線番号一覧表示" %>
<h1><%= @page_title %></h1>

<% if @members.present? %>
<table class="list">
<tr>
  <th>部署</th>
  <th>お名前</th>
  <th>ふりがな</th>
  <th>内線番号</th>
  <th>操作</th>
</tr>
<% @members.each do |member| %>
<tr>
  <td><%= member.department %></td>
  <td><%= member.name %></td>
  <td><%= member.pronunciation %></td>
  <td><%= member.phone_number %></td>
  <td>
    <%= link_to "編集", [:edit, member] %>
  </td>
</tr>
<% end %>
</table>
<% else %>
<p>内線番号情報がありません。</p>
<% end %>
<p><%= link_to "番号の新規登録", :new_member %></p>